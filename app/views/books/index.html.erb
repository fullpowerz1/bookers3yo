<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <!--繰り返し処理-->
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>

        <td>
          <%= book.body %>
        </td>

        <td>
          <%= link_to "show",book_path(book.id) %>
        </td>

        <td>
          <%= link_to "edit",edit_book_path(book.id) %>
        </td>

        <td>
          <%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<!--バリデーションは後で導入する。-->

<!--投稿フォーム-->
<%= form_with model: Book.new do |f| %>
  <div class="field">
    <h3>Title</h3>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h3>Body</h3>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>